{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
    "noUnusedLocals": false, // To be less noisy for now
    "noUnusedParameters": false, // To be less noisy for now
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "allowJs": true
  },
  "include": [
    "tests/**/*.ts",
    "scripts/**/*.mjs",
    "games/**/*.js",
    "js/**/*.js"
  ],
  "exclude": ["node_modules"]
}
